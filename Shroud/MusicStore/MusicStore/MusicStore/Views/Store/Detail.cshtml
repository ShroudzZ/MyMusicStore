    var cd = document.getElementById('cd');
    var music = document.getElementById('music');


    var isrotate = false;
    cd.onclick = function () {
        if (!isrotate) {
            cd.className = "glyphicon glyphicon-cd rotate";
            isrotate = !isrotate;
            music.play();
        } else {
            cd.className = "glyphicon glyphicon-cd ";
            isrotate = !isrotate;
            music.pause();
        }
    }
