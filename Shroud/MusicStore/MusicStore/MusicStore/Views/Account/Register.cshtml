@using MusicStore.ViewModels
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/View.cshtml";
}

<h2>用户注册</h2>
<p>已有账号点击 @Html.ActionLink("这里", "Login")</p>
@using (Html.BeginForm("Register", "Account", new {returnUrl = ViewBag.ReturnUrl}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    ;
    <div>
        <fieldset>
            <legend>用户信息</legend>
            @Html.LabelFor(x => x.UserName)
            <div>
                @Html.TextBoxFor(x => x.UserName, new {placeholder = "请输入用户名"})
                @Html.ValidationMessageFor(x => x.UserName)
            </div>
            @Html.LabelFor(x => x.PassWord)
            <div>
                @Html.PasswordFor(x => x.PassWord, new {placeholder = "请输入密码"})
                @Html.ValidationMessageFor(x => x.PassWord)
            </div>
            @Html.LabelFor(x => x.ConfirmPassWord)
            <div>
                @Html.PasswordFor(x => x.ConfirmPassWord, new {placeholder = "再次确认密码"})
                @Html.ValidationMessageFor(x => x.ConfirmPassWord)
            </div>
            @Html.LabelFor(x => x.MyName)
            <div>
                @Html.TextBoxFor(x => x.MyName, new {placeholder = "请输入姓名"})
                @Html.ValidationMessageFor(x => x.MyName)
            </div>
            @Html.LabelFor(x => x.Email)
            <div>
                @Html.TextBoxFor(x => x.Email, new {placeholder = "请输入邮箱"})
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <p class="text-danger">

            </p>
            <input type="submit" class="btn btn-primary" value="注册"/>
        </fieldset>
    </div>
}