@model MusicStore.ViewModels.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/View.cshtml";
}

<h2>修改密码</h2>

@using (Html.BeginForm("ChangePassword", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true,"密码修改失败,请检查输入是否正确")
    <div>
        <fieldset>
            <legend>修改密码</legend>
            @Html.LabelFor(x => x.PassWord)
            <div>
                @Html.PasswordFor(x => x.PassWord, new { placeholder = "请输入旧密码" })
                @Html.ValidationMessageFor(x => x.PassWord)
            </div>
            @Html.LabelFor(x => x.NewPassWord)
            <div>
                @Html.PasswordFor(x => x.NewPassWord, new { placeholder = "请输入新密码" })
                @Html.ValidationMessageFor(x => x.NewPassWord)
            </div>
            @Html.LabelFor(x => x.ConfirmNewPassWord)
            <div>
                @Html.PasswordFor(x => x.ConfirmNewPassWord, new { placeholder = "再次确认新密码" })
                @Html.ValidationMessageFor(x => x.ConfirmNewPassWord)
            </div>
            <p class="text-danger">

            </p>
            <input type="submit" class="btn btn-primary" value="注册" />
        </fieldset>
    </div>
}

