@model MusicStore.ViewModels.MyViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}
<style>
    #result {
        width: 180px;
        height: 110px;
        border: 1px solid #eee;
    }

        #result img {
            width: 200px;
            height: 112px;
        }
</style>
<h2>Person</h2>
<form enctype="multipart/form-data" action="" method="post">
    @Html.AntiForgeryToken()

    <div>
        <fieldset>
            <div>
                @Html.LabelFor(x => x.Name)
            </div>
            <div>
                @Html.TextBoxFor(x => x.Name, new { placeholder = "请输入收件人姓名" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div>
               @Html.LabelFor(x => x.Sex) 
            </div>
            <div>
                男 @Html.RadioButtonFor(x=>x.Sex,true)
                女 @Html.RadioButtonFor(x => x.Sex, false)
            </div>
            <div>
                @Html.LabelFor(x => x.Address)
            </div>
            <div>
                @Html.TextBoxFor(x => x.Address, new { placeholder = "请输入收货地址" })
                @Html.ValidationMessageFor(x => x.Address)
            </div>

            <div>
                @Html.LabelFor(x => x.MobileNumber)
            </div>
            <div>
                @Html.TextBoxFor(x => x.MobileNumber, new { placeholder = "请输入收件人手机" })
                @Html.ValidationMessageFor(x => x.MobileNumber)
            </div>
            <div>
                @Html.LabelFor(x => x.Description)
            </div>
            <div>
                @Html.TextBoxFor(x => x.Description, new { placeholder = "描述" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
            <div style="margin: 10px 0">
                <img id="imgAvarda" src="@ViewBag.AvardaUrl" style="width: 200px;" />
                @Html.TextBoxFor(x => x.Photo, new { type = "file" })
            </div>
            <button type="submit" class="btn btn-primary">保存</button>
        </fieldset>
    </div>
</form>



<script type="text/javascript">
    $(function () {
        $("#Photo").on("change", function () {

            var file = this.files[0];
            var reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = function (e) {
                $("#imgAvarda").attr("src", this.result);
            }
        })
    })
</script>
